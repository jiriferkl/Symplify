{
    "name": "symplify/symplify",
    "description": "Main repository for Symplify packages development.",
    "license": "MIT",
    "require": {
        "php": "^7.1",

        "abraham/twitteroauth": "^0.7",
        "react/http": "^0.4",
        "ralouphie/mimey": "^1.0",
        "cpliakas/git-wrapper": "^1.7",
        "erusev/parsedown-extra": "^0.7",
        "spatie/regex": "^1.1",
        "greenlion/php-sql-parser": "^4.1",
        "fzaninotto/faker": "^1.6",
        "nelmio/alice": "^2.2",
        "arachne/event-dispatcher": "^0.1",

        "gedmo/doctrine-extensions": "^2.4",
        "knplabs/doctrine-behaviors": "^1.4",

        "doctrine/migrations": "^1.4",
        "doctrine/dbal": "^2.5",
        "doctrine/orm": "^2.5",

        "nette/bootstrap": "^2.4",
        "nette/di": "^2.4",
        "nette/finder": "^2.4",
        "nette/database": "^2.4",
        "nette/http": "^2.4",
        "nette/security": "^2.4",
        "latte/latte": "^2.4",
        "nette/utils": "^2.4",
        "nette/robot-loader": "^2.4",
        "tracy/tracy": "^2.4",

        "symfony/asset": "^3.2",
        "symfony/config": "^3.2",
        "symfony/console": "^3.2",
        "symfony/dependency-injection": "^3.2",
        "symfony/event-dispatcher": "^3.2",
        "symfony/http-kernel": "^3.2",
        "symfony/process": "^3.2",
        "symfony/property-access": "^3.2",
        "symfony/routing": "^3.2",
        "symfony/security": "^3.2",
        "symfony/security-core": "^3.2",
        "symfony/security-http": "^3.2",
        "symfony/templating": "^3.2",
        "symfony/twig-bundle": "^3.2",
        "symfony/yaml": "^3.2",
        "symfony/validator": "^3.2",
        "symfony/serializer": "^3.2",

        "symfony-cmf/routing-bundle": "dev-master as 1.4",

        "tomas-votruba/php_codesniffer-3-pretagged": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "symplify/php7_codesniffer": "@dev",
        "zenify/modular-latte-filters": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",

        "doctrine/doctrine-bundle": "^1.6",

        "nette/application": "^2.4",

        "symfony/form": "^3.2",
        "symfony/framework-bundle": "^3.2",
        "twig/twig": "^2.0",
        "doctrine/annotations": "^1.3",
        "kdyby/events": "^3.0",
        "kdyby/doctrine": "^3.1",
        "kdyby/console": "^2.6",
        "phpstan/phpstan": "^0.5"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\ActionAutowire\\": "packages/ActionAutowire/src",
            "Symplify\\AutoServiceRegistration\\": "packages/AutoServiceRegistration/src",
            "Symplify\\CodingStandard\\": "packages/CodingStandard/src",
            "SymplifyCodingStandard\\": "packages/CodingStandard/src/SymplifyCodingStandard",
            "Symplify\\ControllerAutowire\\": "packages/ControllerAutowire/src",
            "Symplify\\DefaultAutowire\\": "packages/DefaultAutowire/src",
            "Symplify\\ModularDoctrineFilters\\": "packages/ModularDoctrineFilters/src",
            "Symplify\\ModularRouting\\": "packages/ModularRouting/src",
            "Symplify\\ServiceDefinitionDecorator\\": "packages/ServiceDefinitionDecorator/src",
            "Symplify\\Statie\\": "packages/Statie/src",
            "Symplify\\SymfonySecurity\\": "packages/SymfonySecurity/src",
            "Symplify\\SymfonyEventDispatcher\\": "packages/SymfonyEventDispatcher/src",
            "Symplify\\PackageBuilder\\": "packages/PackageBuilder/src",

            "Zenify\\ModularLatteFilters\\": "packages/ModularLatteFilters/src",
            "Zenify\\NetteDatabaseFilters\\": "packages/NetteDatabaseFilters/src",
            "Zenify\\DoctrineFixtures\\": "packages/DoctrineFixtures/src",
            "Zenify\\DoctrineExtensionsTree\\": "packages/DoctrineExtensionsTree/src",
            "Zenify\\DoctrineMigrations\\": "packages/DoctrineMigrations/src",
            "Zenify\\DoctrineBehaviors\\": "packages/DoctrineBehaviors/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\ActionAutowire\\Tests\\": "packages/ActionAutowire/tests",
            "Symplify\\AutoServiceRegistration\\Tests\\": "packages/AutoServiceRegistration/tests",
            "Symplify\\CodingStandard\\Tests\\": "packages/CodingStandard/tests",
            "Symplify\\ControllerAutowire\\Tests\\": "packages/ControllerAutowire/tests",
            "Symplify\\DefaultAutowire\\Tests\\": "packages/DefaultAutowire/tests",
            "Symplify\\ModularDoctrineFilters\\Tests\\": "packages/ModularDoctrineFilters/tests",
            "Symplify\\ModularRouting\\Tests\\": "packages/ModularRouting/tests",
            "Symplify\\ServiceDefinitionDecorator\\Tests\\": "packages/ServiceDefinitionDecorator/tests",
            "Symplify\\Statie\\Tests\\": "packages/Statie/tests",
            "Symplify\\Tests\\": "tests",
            "React\\Tests\\Http\\": "vendor/react/http/tests",
            "Symplify\\SymfonySecurity\\Tests\\": "packages/SymfonySecurity/tests",
            "Symplify\\SymfonyEventDispatcher\\Tests\\": "packages/SymfonyEventDispatcher/tests",
            "Symplify\\PackageBuilder\\Tests\\": "packages/PackageBuilder/tests",

            "Zenify\\ModularLatteFilters\\Tests\\": "packages/ModularLatteFilters/tests",
            "Zenify\\NetteDatabaseFilters\\Tests\\": "packages/NetteDatabaseFilters/tests",
            "Zenify\\DoctrineFixtures\\Tests\\": "packages/DoctrineFixtures/tests",
            "Zenify\\DoctrineExtensionsTree\\Tests\\": "packages/DoctrineExtensionsTree/tests",
            "Zenify\\DoctrineMigrations\\Tests\\": "packages/DoctrineMigrations/tests",
            "Zenify\\DoctrineBehaviors\\Tests\\": "packages/DoctrineBehaviors/tests"
        },
        "classmap": [
            "packages/Statie/bin/include-autoload.php"
        ]
    },
    "repositories": [
        { "type": "path", "url": "packages/PackageBuilder", }
        { "type": "path", "url": "packages/PHP7_CodeSniffer" }
    ],
    "scripts": {
        "complete-check": ["vendor/bin/phpunit", "@fix-cs", "@phpstan"],
        "check-cs": "packages/CodingStandard/bin/symplify-cs check packages/*/src packages/*/tests",
        "fix-cs": "packages/CodingStandard/bin/symplify-cs fix packages/*/src packages/*/tests",
        "phpstan": "vendor/bin/phpstan analyse packages --level=4 -c phpstan.neon"
    }
}
